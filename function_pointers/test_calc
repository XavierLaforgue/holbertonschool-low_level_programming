#!/bin/bash
echo "test addition: 1+1=";
./calc 1 + 1; echo $?;
echo "test subtraction negative: 2-3=";
./calc 2 - 3; echo $?;
echo "test subtraction positive: 4-1=";
./calc 4 - 1; echo $?;
echo "test multiplication: 3*4";
./calc 3 '*' 4; echo $?;
echo "test division: 8/2=";
./calc 8 / 2; echo $?;
echo "test modulo: 5%2=";
./calc 5 % 2; echo $?;
echo "test too many arguments: 2-3*4=";
./calc 2 - 3 '*' 4 ; echo $?;
echo "test too few arguments: 2-->";
./calc 2; echo $?;
echo "test unlisted operator: 8/*9=";
./calc 8 '/*' 9; echo $?;
echo "test division by 0: 6/0=";
./calc 6 / 0; echo $?;
echo "test modulo 0: 6%0=";
./calc 6 % 0; echo $?;
